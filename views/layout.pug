doctype html
html
  head
    title knowledgebase
    link(rel='stylesheet' href ='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href ='/css/style.css')
  body
    nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      a.navbar-brand(href='/') knowledgeBase
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar', aria-controls='navbar', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarCollapse.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/') Home
          if user   
            li.nav-item
              a.nav-link(href='/articles/add') Add Articles
        ul.nav.navbar-nav.navbar-right
          if user
            li 
              a(href='/users/logout') Logout
            li
              a(href='/users/register') Register
            li
              a(href='/users/login') Login
        form.form-inline.mt-2.mt-md-0
          input.form-control.mr-sm-2(placeholder='Search', aria-label='Search', type='text')
          button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search


    .container
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; 2018
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='bower_components/bootstrap/dist/js/bootstrap.js')    
    script(src='/js/main.js')
